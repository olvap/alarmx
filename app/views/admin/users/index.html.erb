<div class="row">
  <div class="col s12">
    <h3>User</h3>
    <%= link_to 'Nuevo user', new_admin_user_path, class: 'btn btn-small' %>
    <table class="striped">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td>
              <%= link_to 'Ver', admin_user_path(user), class: 'btn btn-small' %>
              <%= link_to 'Editar', edit_admin_user_path(user), class: 'btn btn-small' %>
              <%= link_to 'Eliminar', admin_user_path(user), method: :delete, data: { confirm: '¿Estás seguro de que quieres eliminar este edificio?' }, class: 'btn btn-small red darken-2' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

